<section id="header">
  <div class="container">
    <div class="row">
      <div class="col-12 d-flex justify-content-center mt-2">
        <img src="img/hamburger_logo.png" width="200" alt='logo' />
      </div>
      <div class="col-12">
        <div class="header_content text-center mt-2 mb-3 clearfix">
          <h1>EAT-IN! Burgers</h1>
          <button class="add-burger btn btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Add a Burger
          </button>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>

<section id="burg_holders">
  <div class="container">
    {{> alerts/alerts-block}}
    <div class="row">
      <div class="col-12 col-md-6  d-flex flex-column">
        <div class="card mb-3">
          <div class="card-header">
            <h5 class="card-header-text text-center">Burger Not Yet Eaten!</h5>
          </div>
          <div class="card-block burger-box pl-4">
            {{#each burger}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6  d-flex  flex-column">
        <div class="card">
          <div class="card-header">
            <h5 class="card-header-text text-center">Eaten Burgers!</h5>
          </div>
          <div class="card-block burger-box pl-4">
            {{#each burger}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
